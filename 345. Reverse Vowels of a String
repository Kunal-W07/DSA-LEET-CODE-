class Solution {
public:
    bool isvowel(char ch){
        //  if(ch >= 'A' && ch <= 'Z'){
        //     ch = ch - 'A' + 'a'; // Correct conversion to lowercase
        // }
        ch = tolower(ch);
        if(ch=='a'|| ch=='e'|| ch=='i'|| ch=='o'|| ch=='u'){
            return true;
        }
        return false;

    }


    string reverseVowels(string s) {
        int i=0;
        int j= s.size()-1;

        while(i<j){
            if(isvowel(s[i]) && isvowel(s[j]) == true){
                swap(s[i],s[j]);
                i++;
                j--;
            }
            else if(isvowel(s[i])==false){
                i++;
            }else{
                j--;
            }
        }
        return s;
    }
};
