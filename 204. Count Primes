class Solution {
public:
    int countPrimes(int n) {
         if (n <= 2) return 0; // Fix for small inputs
        vector<bool>prime(n,true);

        prime[0] = false;
        prime[1] = false;
        int count =0;
        for(int i =2; i<n; i++){
            if(prime[i]){
                count++;

               int j = 2 * i;

                while(j <n){
                    prime[j] = false;
                    j = j+i;
                }
            }

        }
        return count;
        
    }
};
