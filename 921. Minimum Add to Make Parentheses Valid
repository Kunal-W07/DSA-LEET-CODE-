class Solution {
public:
    int minAddToMakeValid(string s) {
        
        stack<char>st;

        for(char ch : s){
            if(ch=='('){
                st.push(ch);
            }
            else if(!st.empty() && ch==')' && st.top()=='('){
                st.pop();
            }
            else{
                st.push(ch);
            }
        }
        int ans = 0;
        if(st.empty()){
            return ans;
        }
        while(!st.empty()){
            ans++;
            st.pop();
        }
        return ans;
    }
};
