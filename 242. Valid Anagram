class Solution {
public:
    bool isAnagram(string s, string t) {
        //using virtual hash

        int hash[256] = {0};
        int hash2[256] = {0};

        for(int i=0; i<s.length(); i++){
            hash[s[i]]++;
        }

        for(int i=0; i<t.length(); i++){
            hash2[t[i]]++;
        }

        for(int i =0; i<256; i++){
            if(hash[i] != hash2[i]){
                return false;
            }
        }
        return true;
    }
};









class Solution {
public:
    bool isAnagram(string s, string t) {
      sort(s.begin(),s.end());
      sort(t.begin(),t.end());

      if(s==t){
        return true;
      }else{
        return false;
      }
        
    }
};
